---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

// Get all blog posts
const newsItems = await getCollection('blog');
const sortedNews = newsItems.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Separate featured post (first) from other posts
const [featuredNews, ...otherNews] = sortedNews;
---

<section class="py-20 bg-[#181818] text-white font-atkinson">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-semibold text-white mb-2">Latest From our News</h2>
      <p class="text-gray-400">Stay updated with our latest news and articles.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Featured Article -->
      {
        featuredNews && (
          <a
            href={`/blog/${featuredNews.id}`}
            class="featured-card group lg:col-span-3 flex flex-col md:flex-row bg-[#2A2A2A] rounded-2xl overflow-hidden border border-transparent hover:border-[#FBD38D]/50 transition-all duration-300"
          >
            <div class="md:w-1/2 lg:w-3/5 overflow-hidden">
              {featuredNews.data.heroImage && (
                <Image
                  src={featuredNews.data.heroImage}
                  alt={featuredNews.data.title}
                  width={800}
                  height={450}
                  class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
                />
              )}
            </div>
            <div class="md:w-1/2 lg:w-2/5 p-8 flex flex-col justify-center">
              <p class="text-sm text-[#FBD38D] mb-2 font-semibold">Featured Article</p>
              <h3 class="text-2xl font-bold mb-3 text-white line-clamp-3">
                {featuredNews.data.title}
              </h3>
              <p class="text-gray-400 mb-6 line-clamp-2">{featuredNews.data.description}</p>
              <div class="mt-auto flex items-center text-sm font-medium text-white">
                Read more
                <Icon
                  name="mdi:arrow-right"
                  size={16}
                  class="ml-2 transform transition-transform duration-300 group-hover:translate-x-1 text-[#FBD38D]"
                />
              </div>
            </div>
          </a>
        )
      }

      <!-- Other Articles -->
      {
        otherNews.slice(0, 3).map(item => (
          <a
            href={`/blog/${item.id}`}
            class="other-card group block bg-[#2A2A2A] rounded-2xl overflow-hidden border border-transparent hover:border-white/20 transition-all duration-300"
          >
            <div class="overflow-hidden h-48">
              {item.data.heroImage && (
                <Image
                  src={item.data.heroImage}
                  alt={item.data.title}
                  width={400}
                  height={225}
                  class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
                />
              )}
            </div>
            <div class="p-6">
              <h3 class="text-lg font-semibold mb-2 text-white line-clamp-2">{item.data.title}</h3>
              <p class="text-sm text-gray-500">
                {item.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </p>
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-16">
      <a
        href="/blog"
        class="inline-block px-8 py-3 bg-[#FBD38D] text-black font-bold hover:bg-amber-300 transition-colors duration-300 rounded-md"
      >
        View All Articles
      </a>
    </div>
  </div>
</section>

<style>
  .featured-card,
  .other-card {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    transform: translateY(0);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      border-color 0.3s ease;
  }
  .featured-card:hover,
  .other-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
  }
</style>

---
import { Icon } from 'astro-icon/components';

const today = new Date();
---

<footer class="relative bg-[#181818] text-white overflow-hidden">
  <!-- Subtle decorative elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-0.5 bg-marigold"></div>
    <div class="absolute top-20 left-10 w-32 h-32 bg-marigold/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-white/5 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Company Info Section -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <img
            src="/logos/light-variant.svg"
            alt="A2K Group Logo"
            width={120}
            class="mb-4 drop-shadow-lg"
          />
        </div>
        <p class="text-gray-300 text-sm leading-relaxed mb-6">
          Transforming Services through Digitalization
        </p>

        <!-- Social Media -->
        <div class="mb-6">
          <h4 class="text-lg font-semibold text-white mb-4">Social Media</h4>
          <div class="flex space-x-3">
            <a
              href="https://www.facebook.com/a2kgrouporg"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-3 bg-gray-800 border border-gray-700 rounded-lg hover:border-marigold/50 hover:bg-gray-700 transition-all duration-300"
              aria-label="Follow us on Facebook"
            >
              <Icon
                name="mdi:facebook"
                size={20}
                class="text-gray-300 group-hover:text-marigold transition-colors duration-300"
              />
            </a>
            <a
              href="https://instagram.com/a2kgrouporg"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-3 bg-gray-800 border border-gray-700 rounded-lg hover:border-marigold/50 hover:bg-gray-700 transition-all duration-300"
              aria-label="Follow us on Instagram"
            >
              <Icon
                name="mdi:instagram"
                size={20}
                class="text-gray-300 group-hover:text-marigold transition-colors duration-300"
              />
            </a>
            <a
              href="https://www.linkedin.com/company/a2kgroup"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-3 bg-gray-800 border border-gray-700 rounded-lg hover:border-marigold/50 hover:bg-gray-700 transition-all duration-300"
              aria-label="Connect with us on LinkedIn"
            >
              <Icon
                name="mdi:linkedin"
                size={20}
                class="text-gray-300 group-hover:text-marigold transition-colors duration-300"
              />
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="lg:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6 flex items-center">
          <div class="w-1 h-6 bg-marigold rounded-full mr-3"></div>
          Quick Links
        </h4>
        <nav class="space-y-3">
          <a
            href="/"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            Home
          </a>
          <a
            href="/our-story"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            About Us
          </a>
          <a
            href="#services"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            Services
          </a>
          <a
            href="/academy"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            Academy
          </a>
          <a
            href="/blog"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            News
          </a>
          <a
            href="/contact"
            class="group flex items-center text-gray-300 hover:text-marigold transition-all duration-300 text-sm"
          >
            <Icon
              name="mdi:chevron-right"
              size={16}
              class="mr-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
            Contact
          </a>
        </nav>
      </div>

      <!-- Newsletter Subscription -->
      <div class="lg:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6 flex items-center">
          <div class="w-1 h-6 bg-marigold rounded-full mr-3"></div>
          E-mail Subscription
        </h4>
        <p class="text-gray-300 text-sm mb-6 leading-relaxed">
          Get the latest updates on tech products, courses, workshops, internship opportunities and
          services.
        </p>

        <form class="space-y-4" action="#" method="POST">
          <div class="relative">
            <input
              type="email"
              placeholder="Enter your email"
              required
              class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-marigold/50 focus:border-marigold transition-all duration-300"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-marigold hover:bg-marigold/90 text-[#181818] font-semibold py-3 px-6 rounded-lg transition-all duration-300 hover:shadow-lg flex items-center justify-center group"
          >
            <span>Subscribe</span>
            <Icon
              name="mdi:send"
              size={16}
              class="ml-2 transform group-hover:translate-x-1 transition-transform duration-300"
            />
          </button>
        </form>
      </div>

      <!-- Compliance Section -->
      <div class="lg:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6 flex items-center">
          <div class="w-1 h-6 bg-marigold rounded-full mr-3"></div>
          In Compliance with:
        </h4>

        <div class="space-y-4">
          <div
            class="flex items-center space-x-3 p-4 bg-gray-800/50 border border-gray-700 rounded-lg"
          >
            <div class="w-12 h-12 bg-gray-700 rounded-lg flex items-center justify-center">
              <Icon name="mdi:shield-check" size={24} class="text-marigold" />
            </div>
            <div>
              <div class="text-sm font-medium text-white">ISO Certified</div>
              <div class="text-xs text-gray-400">Quality Management</div>
            </div>
          </div>

          <div
            class="flex items-center space-x-3 p-4 bg-gray-800/50 border border-gray-700 rounded-lg"
          >
            <div class="w-12 h-12 bg-gray-700 rounded-lg flex items-center justify-center">
              <Icon name="mdi:security" size={24} class="text-marigold" />
            </div>
            <div>
              <div class="text-sm font-medium text-white">Data Privacy</div>
              <div class="text-xs text-gray-400">Commission Compliant</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-700 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-center md:text-left">
          <p class="text-gray-300 text-sm">
            &copy; {today.getFullYear()} A2K Group Corporation. All rights reserved.
          </p>
          <p class="text-gray-400 text-xs mt-1">Transforming Services through Digitalization</p>
        </div>

        <div
          class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-6 text-sm"
        >
          <a
            href="/privacy-policy"
            class="text-gray-300 hover:text-marigold transition-colors duration-300"
          >
            Privacy Policy
          </a>
          <a
            href="/terms-of-service"
            class="text-gray-300 hover:text-marigold transition-colors duration-300"
          >
            Terms of Service
          </a>
          <a
            href="/sitemap"
            class="text-gray-300 hover:text-marigold transition-colors duration-300"
          >
            Sitemap
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom decorative element -->
  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-marigold"></div>
</footer>

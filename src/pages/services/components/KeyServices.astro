<section id="services" class="section-padding bg-white-50">
  <div class="max-w-7xl mx-auto container-padding">
    <h2
      class="text-4xl md:text-5xl font-heading font-light text-gray-800 mb-12 tracking-tight text-right"
    >
      KEY SERVICES BY DIVISIONS
    </h2>

    <div class="relative flex items-center justify-center min-h-[500px]">
      <!-- Left Division - ANGAD -->
      <div class="absolute left-0 top-1/2 -translate-y-1/2 text-center max-w-xs">
        <img
          src="/src/assets/divisions/angad.webp"
          alt="ANGAD Digital Engineering"
          class="mx-auto mb-4 w-54 h-auto"
        />
        <p class="text-gray-600 text-sm leading-relaxed">
          Developing mobile applications (or app) and hardware solutions for universities and
          corporations for unmet digitization needs
        </p>
      </div>

      <!-- Center - Donut Chart -->
      <div class="flex items-center justify-center">
        <img
          src="/src/assets/services/donut-chart-services.webp"
          alt="ARK Group Services"
          class="w-125 h-125"
        />
      </div>

      <!-- Right Division - KASAMA -->
      <div class="absolute right-0 top-1/2 -translate-y-1/2 text-center max-w-xs">
        <img
          src="/src/assets/divisions/kasama.webp"
          alt="KASAMA Enterprises"
          class="mx-auto mb-4 h-16"
        />
        <p class="text-gray-600 text-sm leading-relaxed">
          Funding innovation through competitions and collaborations
        </p>
      </div>
    </div>

    <!-- Bottom Division - ANGAT -->
    <div class="mt-8 text-center max-w-sm mx-auto">
      <img src="/src/assets/divisions/angat.webp" alt="ANGAT Solutions" class="mx-auto mb-4 h-16" />
      <p class="text-gray-600 text-sm leading-relaxed">
        Provide training to students and employees of organizations to equip them with the relevant
        skills and know-how to expand digitalization through their own efforts
      </p>
    </div>
  </div>
</section>

---
import '@/styles/global.css';
import Header from '@/components/Header.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A2K Group - Transforming Services through Digital Innovation' } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700&family=JetBrains+Mono:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <!-- Satoshi font from CDN -->
    <link
      href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,600,700,800,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-body bg-white text-deep-grey antialiased">
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1;
  }

  body {
    margin: 0;
    padding: 0;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Font-specific optimizations */
  .font-heading {
    letter-spacing: -0.02em;
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1,
      'ss01' 1;
  }

  .font-body {
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1;
  }

  .font-mono {
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1,
      'zero' 1;
    font-variant-ligatures: contextual;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
